# Fitbit API Credentials
FITBIT_CLIENT_ID=your_fitbit_client_id_here
FITBIT_CLIENT_SECRET=your_fitbit_client_secret_here
FITBIT_REDIRECT_URI=http://localhost:3001/auth/fitbit/callback
# For Render deployment, set to your service URL:
# FITBIT_REDIRECT_URI=https://your-app-name.onrender.com/auth/fitbit/callback

# GitHub Models (AI) Configuration
# Generate token at: https://github.com/settings/tokens (fine-grained)
# Required scope: "Models"
GITHUB_TOKEN=your_github_personal_access_token_here
LLM_API_URL=https://models.inference.ai.azure.com
LLM_MODEL=gpt-4o-mini

# Alternative: Use any OpenAI-compatible API (set LLM_API_KEY instead of GITHUB_TOKEN)
# LLM_API_KEY=your_api_key
# LLM_API_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-4

# Server Configuration
PORT=3001
# Render uses port 10000 by default for Node services (set in Render dashboard, not here)
SESSION_SECRET=your_random_session_secret_here
NODE_ENV=development

# Optional: Demo mode (bypasses Fitbit auth, uses generated data)
DEMO_MODE=true

# Optional: Rate limiting between LLM calls (milliseconds)
# MIN_TIME_BETWEEN_CALLS=15000
