# Fitbit API Credentials
FITBIT_CLIENT_ID=your_fitbit_client_id_here
FITBIT_CLIENT_SECRET=your_fitbit_client_secret_here
FITBIT_REDIRECT_URI=http://localhost:3001/auth/fitbit/callback
# For Render deployment, set to your service URL:
# FITBIT_REDIRECT_URI=https://your-app-name.onrender.com/auth/fitbit/callback

# LLM Configuration (OpenAI-compatible API)
LLM_API_KEY=your_llm_api_key_here
LLM_API_URL=http://localhost:1234/v1
LLM_MODEL=local-model

# Server Configuration
PORT=3001
# Render uses port 10000 by default for Node services
# PORT=10000
SESSION_SECRET=your_random_session_secret_here
NODE_ENV=development
DEMO_MODE=true
