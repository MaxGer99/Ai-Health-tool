# Render environment example (do NOT use in production directly)
# Configure these in Render Dashboard → Environment → Add Environment Variable

NODE_ENV=production
PORT=10000

# Fitbit OAuth
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_client_secret
FITBIT_REDIRECT_URI=https://your-app-name.onrender.com/auth/fitbit/callback

# Sessions
SESSION_SECRET=replace_with_random_string

# LLM Provider
LLM_API_URL=https://api.groq.com/openai/v1
LLM_API_KEY=your_llm_api_key
LLM_MODEL=llama-3.1-70b-versatile

# Demo mode (disable in production)
DEMO_MODE=false
